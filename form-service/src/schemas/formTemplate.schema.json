{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FormTemplate",
  "type": "object",
  "required": [
    "templateId",
    "name",
    "insuranceLine",
    "organizationId",
    "status",
    "version",
    "sections"
  ],
  "properties": {
    "templateId": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "insuranceLine": { "type": "string" },
    "organizationId": { "type": "string" },
    "status": { "enum": ["draft", "completed"] },
    "version": { "type": "integer", "minimum": 1 },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "order", "questions"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "order": { "type": "integer", "minimum": 0 },
          "questions": {
            "type": "array",
            "items": { "$ref": "#/definitions/question" }
          }
        }
      }
    },
    "questionsWithoutSection": {
      "type": "array",
      "items": { "$ref": "#/definitions/question" }
    },
    "connectors": {
      "type": "array",
      "items": { "$ref": "#/definitions/connector" }
    },
    "isDeleted": { "type": "boolean" }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": ["id", "label", "dataKey", "type", "order"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "dataKey": { "type": "string" },
        "type": {
          "enum": [
            "text",
            "number",
            "currency",
            "date",
            "dropdown",
            "radio",
            "checkbox",
            "email",
            "phone"
          ]
        },
        "order": { "type": "integer", "minimum": 0 },
        "placeholder": { "type": "string" },
        "helperText": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "value"],
            "properties": {
              "label": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        },
        "validation": {
          "type": "object",
          "properties": {
            "required": { "type": "boolean" },
            "minLength": { "type": "integer", "minimum": 0 },
            "maxLength": { "type": "integer", "minimum": 1 },
            "min": { "type": "number" },
            "max": { "type": "number" },
            "pattern": { "type": "string" },
            "enum": {
              "type": "array",
              "items": { "type": "string" }
            },
            "message": { "type": "string" }
          }
        },
        "connectors": {
          "type": "array",
          "items": { "$ref": "#/definitions/connectorFieldMapping" }
        }
      }
    },
    "connector": {
      "type": "object",
      "required": ["portal", "fieldMap"],
      "properties": {
        "portal": { "type": "string" },
        "description": { "type": "string" },
        "fieldMap": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "transformations": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["type", "fields"],
            "properties": {
              "type": { "enum": ["concat"] },
              "fields": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 2
              },
              "separator": { "type": "string" }
            }
          }
        }
      }
    },
    "connectorFieldMapping": {
      "type": "object",
      "required": ["portal", "destinationField"],
      "properties": {
        "portal": { "type": "string" },
        "destinationField": { "type": "string" },
        "transform": {
          "enum": ["concatFirstLast", "uppercase", "lowercase", "none"]
        }
      }
    }
  }
}

