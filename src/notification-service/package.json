{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Nectaria Notification Service - Multi-channel notifications, templates, and user preferences",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "start": "func start",
    "pretest": "npm run build",
    "test": "node --test --experimental-test-coverage dist/src/tests/**/*.test.js",
    "test:watch": "tsc -w & node --test --watch dist/src/tests/**/*.test.js",
    "seed:templates": "node dist/scripts/seedTemplates.js"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/functions": "^4.5.1",
    "@azure/communication-email": "^1.0.0",
    "@azure/communication-sms": "^1.1.0",
    "@azure/eventgrid": "^5.5.1",
    "@nectaria/shared-types": "file:../../../packages/@nectaria/shared-types",
    "handlebars": "^4.7.8",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "azure-functions-core-tools": "^4.x",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

