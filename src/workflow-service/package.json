{
  "name": "workflow-service",
  "version": "1.0.0",
  "description": "Configuration-driven workflow management service for Azure Functions",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start --port 7073",
    "test": "npm run build && node --test \"dist/src/tests/**/*.js\"",
    "test:watch": "tsx watch --test \"src/tests/**/*.test.ts\"",
    "test:coverage": "npm run build && node --test --experimental-test-coverage \"dist/src/tests/**/*.js\"",
    "precommit": "npm test",
    "verify": "npm run test:coverage"
  },
  "dependencies": {
    "@azure/cosmos": "^4.8.0",
    "@azure/functions": "^4.0.0",
    "@azure/service-bus": "^7.9.5",
    "@nectaria/auth-middleware": "file:../../../packages/@nectaria/auth-middleware",
    "@nectaria/shared-types": "file:../../../packages/@nectaria/shared-types",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "durable-functions": "^3.1.0",
    "jsonata": "^2.1.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "azure-functions-core-tools": "^4.x",
    "rimraf": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^4.0.0"
  }
}
