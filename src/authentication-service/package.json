{
  "name": "authentication-service",
  "version": "1.0.0",
  "description": "Nectaria Authentication Service - Azure AD B2B SSO, session management, token lifecycle",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "start": "func start",
    "pretest": "npm run build",
    "test": "node --test --experimental-test-coverage dist/src/tests/**/*.test.js",
    "test:watch": "tsc -w & node --test --watch dist/src/tests/**/*.test.js"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.5.0",
    "@azure/msal-node": "^2.16.2",
    "@azure/eventgrid": "^5.5.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.0.3",
    "ua-parser-js": "^1.0.39"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^10.0.0",
    "azure-functions-core-tools": "^4.x",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
