{
	"info": {
		"name": "Customer Service API",
		"description": "API collection for Customer Service Azure Functions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Signup - Individual",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customerType\": \"INDIVIDUAL\",\n  \"title\": \"Mr\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"name\": \"John Doe\",\n  \"dateOfBirth\": \"1990-01-15\",\n  \"email\": \"john.doe@example.com\",\n  \"phoneNumber\": \"+971501234567\",\n  \"mobileNumber\": \"+971501234567\",\n  \"nationality\": \"American\",\n  \"gender\": \"Male\",\n  \"address\": \"123 Main St, Dubai\",\n  \"agent\": \"Direct\",\n  \"placementExecutive\": \"Jane Smith\",\n  \"customerTypeCategory\": \"VERY IMPORTANT PERSON\",\n  \"currency\": \"AED\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/customers/signup",
							"host": ["{{base_url}}"],
							"path": ["customers", "signup"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"customer_id\", response.id);",
									"    console.log(\"Customer ID saved:\", response.id);",
									"}"
								]
							}
						}
					]
				},
