{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
